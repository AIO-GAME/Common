<#@ template language="C#" linePragmas="true" visibility="public"#>
<#@ output extension=".cs" encoding="utf-8" #>
<#
    var NUMBER = new[]
    {
        "bool",
        "sbyte",
        "short",
        "int",
        "long",
        "byte",
        "ushort",
        "uint",
        "ulong",
        "char",
        "string",
        "float",
        "double",
        "decimal"
    };
#>
using System;
using System.Runtime.InteropServices;

namespace AIO.Security
{
    partial struct NDecimal
    {
<#
    foreach (var item in NUMBER)
    {
#>
        #region <#= item #>

        /// <param name="value"> <see cref="<#= item #>"/> </param>
        public NDecimal(<#= item #> value = default)
        {
            _value    = 0;
            _offset   = 0;
            _oldValue = 0;
            try
            {
                Value = Convert.ToDecimal(value);
            }
            catch
            {
                Console.WriteLine($"无法将{value}变为{Value.GetType()},已改为{decimal.Zero}");
                Value = decimal.Zero;
            }
        }

        #endregion

<#
    }
#>
    }
}